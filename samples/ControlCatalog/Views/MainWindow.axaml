<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ControlCatalog.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:mvo="clr-namespace:Mvolonia.Controls;assembly=Mvolonia.Controls"
        x:Class="ControlCatalog.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ControlCatalog">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <mvo:GroupingListBox>
        <ListBoxItem >
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock VerticalAlignment="Center">Item 1</TextBlock>
            </StackPanel>
        </ListBoxItem>
        <ListBoxItem>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock VerticalAlignment="Center">Item 2</TextBlock>
            </StackPanel>
        </ListBoxItem>
    </mvo:GroupingListBox>
    
</Window>
